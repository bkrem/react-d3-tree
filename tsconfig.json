{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "outDir": "./lib/cjs",
    "declaration": true,
    "declarationDir": "./lib/types",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "*.js": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/tests/*", "**/*.spec.ts", "**/*.test.ts", "**/*.test.js"]
}
